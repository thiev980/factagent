        const edgesData = [{"from": "src_dad48626", "to": "claim_0", "color": {"color": "#999", "highlight": "#333"}, "width": 2.7, "smooth": {"type": "curvedCW", "roundness": 0.2}}, {"from": "src_8717f8e8", "to": "claim_0", "color": {"color": "#999", "highlight": "#333"}, "width": 2.7, "smooth": {"type": "curvedCW", "roundness": 0.2}}, {"from": "src_3e630979", "to": "claim_0", "color": {"color": "#999", "highlight": "#333"}, "width": 2.0999999999999996, "smooth": {"type": "curvedCW", "roundness": 0.2}}, {"from": "src_2cd2f750", "to": "claim_1", "color": {"color": "#999", "highlight": "#333"}, "width": 2.7, "smooth": {"type": "curvedCW", "roundness": 0.2}}, {"from": "src_df306425", "to": "claim_1", "color": {"color": "#999", "highlight": "#333"}, "width": 2.4000000000000004, "smooth": {"type": "curvedCW", "roundness": 0.2}}, {"from": "src_872bc3fc", "to": "claim_1", "color": {"color": "#999", "highlight": "#333"}, "width": 2.0999999999999996, "smooth": {"type": "curvedCW", "roundness": 0.2}}];

        // vis.js Network erstellen
        const container = document.getElementById('graph-container');
        const data = {
            nodes: new vis.DataSet(nodesData),
            edges: new vis.DataSet(edgesData),
        };

        const options = {
            physics: {
                solver: 'forceAtlas2Based',
                forceAtlas2Based: {
                    gravitationalConstant: -80,
                    centralGravity: 0.01,
                    springLength: 180,
                    springConstant: 0.06,
                    damping: 0.4,
                    avoidOverlap: 0.5,
                },
                stabilization: {
                    enabled: true,
                    iterations: 200,
                    fit: true,
                },
            },
            interaction: {
                hover: true,
                tooltipDelay: 100,
                zoomView: true,
                dragView: true,
            },
            layout: {
                improvedLayout: true,
            },
        };

        const network = new vis.Network(container, data, options);

        // Tooltip bei Hover
        const tooltip = document.getElementById('tooltip');
        const tooltipTitle = document.getElementById('tooltip-title');
        const tooltipContent = document.getElementById('tooltip-content');

        network.on('hoverNode', function(params) {
            const node = nodesData.find(n => n.id === params.node);
            if (node && node.title) {
                tooltipTitle.textContent = node.label;
                tooltipContent.innerHTML = node.title;
                tooltip.style.display = 'block';
            }
        });

        network.on('blurNode', function() {
            tooltip.style.display = 'none';
        });

        // Klick auf Quelle ‚Üí URL √∂ffnen
        network.on('doubleClick', function(params) {
            if (params.nodes.length > 0) {
                const node = nodesData.find(n => n.id === params.nodes[0]);
                if (node && node.url) {
                    window.open(node.url, '_blank');
                }
            }
        });

        // Fit nach Stabilisierung
        network.on('stabilizationIterationsDone', function() {
            network.fit({ animation: { duration: 500 } });
        });
    </script>
